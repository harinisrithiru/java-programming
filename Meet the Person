import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int age = sc.nextInt();
        float height;
        height = sc.nextFloat();
        sc.nextLine();
        String name;
        name = sc.nextLine();
        String formattedHeight = String.format("%.2f", height);
        System.out.println( name+" is "+age+" years old and "+formattedHeight+" meters tall. " );
        
    }
}
